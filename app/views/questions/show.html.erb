<div class="container">
  <div class="row">
    <div class="column column-60 column-offset-20">
      <h3>
        <%= @question.title %>
      </h3>

      <h5>
        <%= @question.body %>
      </h5>

      <p>
      <%= @question.views_count %> view(s) |
      +<%= @question.positive_votes %> / -<%= @question.negative_votes %>
      </p>

      <%= link_to "Upvote", upvote_question_path(@question), "data-method": "put" %> |
      <%= link_to "Downvote", downvote_question_path(@question), "data-method": "put" %> |
      <%= link_to 'Edit', edit_question_path(@question) %> |
      <%= link_to 'Back', questions_path %>
    </div>
  </div>
</div>
