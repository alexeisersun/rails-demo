<div class="container">
  <div class="row">
    <div class="column column-60 column-offset-20">
      <h1 class="hero-text">Welcome to <span class="brand-color">Stack Overflow</span>!</h1>
    </div>
  </div>

  <div class="row">
    <div class="column column-60 column-offset-20">
      <% if @questions_count == 0 %>
        <h3 class="hero-subtext">
          Be the first to <%= link_to "ask a question", questions_path %>.
        </h3>
      <% else %>
        <h3 class="hero-subtext"> Here you can find answers to
          <% text = @questions_count == 1 ? "1 question" : "#{@questions_count} questions" %>
          <%= link_to text, questions_path %>.
        </h3>
      <% end %>
    </div>
  </div>

  <% if @popular_questions.size > 0 %>
    <div class="separator"></div>
    <div class="row">
      <div class="column column-60 column-offset-20">
        <h3> Popular questions </h3>
      </div>
    </div>

    <% @popular_questions.each do |question| %>
      <div class="row">
        <div class="column column-40 column-offset-20">
          <h5><%= link_to question.title, question_path(question) %></h5>
        </div>
        <div class="column column-20">
          <p><%= question.views_count %> view(s) | +<%= question.positive_votes %> / -<%= question.negative_votes %> </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
